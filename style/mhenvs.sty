%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\def\sqr#1#2{%
	\fboxsep0pt%
	\fboxrule#2pt%
	\fbox{\hbox to #1pt{\hss\vbox to #1pt{\vss}}}}
\def\qed{\unskip\nobreak\hfil\penalty50\hskip0.3em\hbox{}\nobreak
      \hfil\sqr{5.5}{0.2}\parfillskip=\z@ \finalhyphendemerits=0 \par}
